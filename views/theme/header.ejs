<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <base href="/">
    <link href='/css/style.css' rel='stylesheet' />
  </head>
  <body>
    <div id="mainContainer">
      <header>
        <div id="nav" class="group">
          <div class="logo">Untitled</div>
          <div class="user group">
          <% if (currentUser) { %>
            <div class="user-avatar" style="background-image: url('https://www.gravatar.com/avatar/<%= emailHash %>;"></div>
            <div class="user-name"><b><%= alias %></b></div>
          <% } %>
          </div>
        </div>
        <div class="menu">
          <ul class="group">
          <!--
          --><li><a href="/"><span class="icon-home"></span>Home</a></li><!--
          <% if (!currentUser) { %>
          --><li><a href="/register"><span class="icon-register"></span>Register</a></li><!--
          --><li><a href="/login"><span class="icon-log-in"></span>Log In</a></li><!--
          <% } else { %>
          --><li><a href="/profile"><span class="icon-user"></span>Profile</a></li><!--
          --><li><a href="/contact"><span class="icon-mail"></span>Contact</a></li><!--
          --><li><a href="/logout"><span class="icon-log-out"></span>Log Out</a></li><!--
          <% } %>
          -->
          </ul>
        </div>
      </header>
      <% if (title === "Home") { %>
      <div id="showcase">
        <div class="wrapper">
          <div id="carousel" class="group"></div>
        </div>
      </div>
      <% } %>
      <div class="wrapper">
        <div class="page">
          <div class="content">