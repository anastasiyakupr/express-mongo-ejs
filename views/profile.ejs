<script>

	let roleType = <%= role %>;
	const roleEl = document.querySelector('#role');

	function roleTitle() {
		if (roleType === 10) {
			roleType = 5;
			roleEl.value = "Administrator";
			console.log(<%= role %> + ": Administrator");
		} else if (roleType !== 10) {
			roleType = 10;
			roleEl.value = "General User";
			console.log(<%= role %> + ": General User");
		}
	};

	roleEl.addEventListener('click', (e) => {
		return roleTitle();
	});

</script>
